<script type="text/javascript">
//get the info of currently logged in user
$.get("http://localhost:1337/navbar/anyuserteam/<%=user.id%>", function (data, status) {
  var teamname_togive="undefined";
  if (!data)
    console.log("Failure!", "Couldn't fetch navbar/getinfo");
  else {
   if(data.team){
    $("#noteamname").hide();
    $("#teamname_a").show();
    $("#teamname_a").attr("href","http://localhost:1337/team/show/"+data.team.teamName);
    console.log(data.team.teamName);
    $("#teamname").html(data.team.teamName);
  }
  else{
    $("#noteamname").show();
    $("#teamname_a").hide();

  }

}
});
</script>